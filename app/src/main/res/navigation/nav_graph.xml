<?xml version="1.0" encoding="utf-8"?>
<navigation
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/homeFragment"
    >

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.vitaliimalone.simpletodo.presentation.home.HomeFragment"
        android:label="HomeFragment"
        tools:layout="@layout/home_fragment"
        >
        <action
            android:id="@+id/action_homeFragment_to_noteFragment"
            app:destination="@id/noteFragment"
            />
    </fragment>
    <fragment
        android:id="@+id/noteFragment"
        android:name="com.vitaliimalone.simpletodo.presentation.note.NoteFragment"
        android:label="note_fragment"
        tools:layout="@layout/note_fragment"
        >
        <argument
            android:name="note"
            app:argType="com.vitaliimalone.simpletodo.domain.models.Note"
            />
    </fragment>
</navigation>