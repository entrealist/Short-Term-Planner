<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light">
        <!-- Default theme -->
        <item name="themeColorPrimary">@color/pale_theme_color_primary</item>
        <item name="themeColorPrimaryVariant">@color/pale_theme_color_primary_variant</item>
        <item name="themeColorOnPrimary">?themeTextColorPrimary</item>
        <item name="themeColorSecondary">@color/pale_theme_color_secondary</item>
        <item name="themeColorSecondaryVariant">@color/pale_theme_color_secondary_variant</item>
        <item name="themeColorOnSecondary">?themeTextColorPrimaryInverse</item>
        <item name="themeColorBackground">@color/pale_theme_color_background</item>
        <item name="themeColorBackgroundSecondary">@color/pale_theme_color_background_secondary</item>
        <item name="themeColorSurface">@color/pale_theme_color_surface</item>
        <item name="themeColorError">@color/pale_theme_color_error</item>
        <item name="themeColorOnError">?themeTextColorPrimaryInverse</item>
        <item name="themeTextColorPrimary">@color/black_75</item>
        <item name="themeTextColorSecondary">@color/black_50</item>
        <item name="themeTextColorTertiary">@color/black_25</item>
        <item name="themeTextColorPrimaryInverse">@color/white_75</item>
        <item name="themeTextColorSecondaryInverse">@color/white_50</item>
        <item name="themeTextColorTertiaryInverse">@color/white_25</item>
        <item name="themeDoneCheckboxColor">@color/pale_theme_color_checkbox_done</item>
        <item name="themeDividerColor">@color/black_50</item>
        <item name="themeIsLight">true</item>
        <!-- Default theme -->

        <!-- Material theming -->
        <item name="colorPrimary">?themeColorPrimary</item>
        <item name="colorPrimaryVariant">?themeColorPrimaryVariant</item>
        <item name="colorOnPrimary">?themeColorOnPrimary</item>
        <item name="colorSecondary">?themeColorSecondary</item>
        <item name="colorSecondaryVariant">?themeColorSecondaryVariant</item>
        <item name="colorOnSecondary">?themeColorOnSecondary</item>
        <item name="android:colorBackground">?themeColorBackground</item>
        <item name="colorOnBackground">?themeTextColorPrimary</item>
        <item name="colorSurface">?themeColorSurface</item>
        <item name="colorOnSurface">?themeTextColorPrimary</item>
        <item name="colorError">?themeColorError</item>
        <item name="colorOnError">?themeTextColorPrimaryInverse</item>
        <item name="android:textColor">?themeTextColorPrimary</item>
        <item name="android:textColorPrimary">?themeTextColorPrimary</item>
        <item name="android:textColorSecondary">?themeTextColorSecondary</item>
        <item name="android:textColorTertiary">?themeTextColorTertiary</item>
        <item name="android:textColorPrimaryInverse">?themeTextColorPrimaryInverse</item>
        <item name="android:textColorSecondaryInverse">?themeTextColorSecondaryInverse</item>
        <item name="android:textColorTertiaryInverse">?themeTextColorTertiaryInverse</item>
        <item name="materialCalendarTheme">@style/ThemeMaterialCalendar</item>
        <!-- Material theming -->

        <!-- System settings -->
        <item name="fontFamily">@font/red_hat_display_regular</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowLightStatusBar">?themeIsLight</item>
        <item name="android:statusBarColor">?themeColorPrimaryVariant</item>
        <item name="android:windowBackground">?themeColorBackground</item>
        <!-- System settings -->
    </style>

    <style name="TransparentBottomSheet" parent="Theme.MaterialComponents.BottomSheetDialog">
        <item name="android:colorBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowSoftInputMode">adjustResize</item>
    </style>

    <style name="HomeTabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">@dimen/home_tab_text_size</item>
        <item name="android:textAllCaps">false</item>
        <item name="textAllCaps">false</item>
        <item name="fontFamily">@font/red_hat_display_medium</item>
    </style>

    <style name="BorderlessTaskEditText">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:paddingStart">@dimen/xs_spacing</item>
        <item name="android:paddingTop">@dimen/s_spacing</item>
        <item name="android:paddingEnd">@dimen/xs_spacing</item>
        <item name="android:paddingBottom">@dimen/s_spacing</item>
        <item name="android:textSize">@dimen/l_text_size</item>
    </style>

    <style name="BorderlessDialogButton" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/m_text_size</item>
    </style>

    <style name="ThemeMaterialCalendar" parent="ThemeOverlay.MaterialComponents.MaterialCalendar">
        <item name="buttonBarPositiveButtonStyle">@style/ThemeMaterialCalendarButton</item>
        <item name="buttonBarNegativeButtonStyle">@style/ThemeMaterialCalendarButton</item>
        <item name="materialButtonStyle">@style/ThemeMaterialCalendarTextButton</item>
    </style>

    <style name="ThemeMaterialCalendarButton" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">?themeTextColorPrimary</item>
    </style>

    <style name="ThemeMaterialCalendarTextButton" parent="Widget.MaterialComponents.Button.TextButton.Dialog.Flush">
        <item name="android:textColor">?themeTextColorPrimary</item>
        <item name="iconTint">?themeTextColorPrimary</item>
    </style>

    <style name="SettingsItemTextView">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/m_spacing</item>
        <item name="android:layout_marginEnd">@dimen/m_spacing</item>
        <item name="android:ellipsize">end</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:maxLines">1</item>
    </style>
</resources>
